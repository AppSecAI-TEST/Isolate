<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/theme_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="8dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_theme"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:scaleType="fitXY"
        android:src="@drawable/drawer_header" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#EF4437">

        <TextView
            android:id="@+id/theme_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="36dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="48dp"
            android:text="主题名"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/theme_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/theme_title"
            android:layout_below="@+id/theme_title"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:text="主题描述主题描述主题描述主题描述主题描述主题描述主题描述主题描述主题描述"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/white" />

        <!--<ImageView-->
        <!--android:id="@+id/img_show"-->
        <!--android:layout_width="24dp"-->
        <!--android:layout_height="24dp"-->
        <!--android:src="@drawable/ic_favorite"-->
        <!--android:layout_alignTop="@+id/theme_desc"-->
        <!--android:layout_toRightOf="@+id/theme_title"-->
        <!--android:layout_toEndOf="@+id/theme_title"-->
        <!--android:layout_marginLeft="24dp"-->
        <!--android:layout_marginStart="24dp" />-->
    </RelativeLayout>


</LinearLayout>
