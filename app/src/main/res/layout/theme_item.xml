<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/theme_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_theme"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:scaleType="fitXY"
        android:src="@drawable/drawer_header" />

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/image_theme"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/transBackOfTheme"
        android:paddingLeft="@dimen/normal_margin"
        android:paddingRight="@dimen/normal_margin"
        android:paddingTop="@dimen/normal_margin">

        <TextView
            android:id="@+id/theme_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="主题名"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/cardBackground" />

        <TextView
            android:id="@+id/theme_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/theme_title"
            android:layout_below="@+id/theme_title"
            android:text="主题描述主题描述主题描述主题描述主题描述主题描述主题描述主题描述主题描述"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/cardBackground" />

    </RelativeLayout>


</RelativeLayout>
