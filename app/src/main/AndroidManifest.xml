<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tneciv.zhihudaily">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".home.view.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".detail.view.DetailActivity"
            android:label="@string/title_activity_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".history.view.HistoryActivity"
            android:label="@string/HistoryDaily"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".theme.view.ThemeActivity"
            android:label="@string/themeList"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".about.AboutActivity" />
        <activity android:name=".github.GithubActivity" />
        <activity
            android:name=".WaitActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_wait"
            android:theme="@style/FullscreenTheme"></activity>
    </application>

</manifest>
